doctype html
html
  head
    meta(charset="UTF-8")
    title Код активации
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        padding: 30px;
        color: #333;
      }
      .code-box {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px;
        margin: auto;
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 2px;
      }
  body
    .code-box #{code}
